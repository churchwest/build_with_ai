<style>
  .homepage {
    background-color: var(--color-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-5);
  }

  /* Hero Section */
  .hero {
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%),
                url('https://images.unsplash.com/photo-1558317374-067fb5f30001?w=1920&h=1080&fit=crop');
    background-size: cover;
    background-position: center;
    background-blend-mode: multiply;
    color: var(--color-white);
    padding: var(--space-10) 0;
    text-align: center;
    min-height: 600px;
    display: flex;
    align-items: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(77, 161, 169, 0.9) 0%, rgba(61, 129, 137, 0.85) 100%);
    z-index: 1;
  }

  .hero-content {
    position: relative;
    z-index: 2;
  }

  .hero :global(.heading) {
    color: var(--color-white);
    margin-top: var(--space-4);
    margin-bottom: var(--space-5);
  }

  .hero :global(.hero-subtitle) {
    color: var(--color-white);
    max-width: 700px;
    margin: 0 auto var(--space-6);
    opacity: 0.95;
  }

  .hero-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Order Status */
  .order-status {
    padding: var(--space-8) 0;
    background-color: var(--color-gray-100);
  }

  .order-input-group {
    display: flex;
    gap: var(--space-3);
    margin-top: var(--space-5);
  }

  .order-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    font-size: var(--font-size-base);
    font-family: var(--font-family);
    border: var(--border-width-2) solid var(--color-gray-300);
    border-radius: var(--radius-md);
    transition: border-color var(--transition-fast);
  }

  .order-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  /* Services Section */
  .services {
    padding: var(--space-10) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
  }

  .service-image {
    margin: calc(var(--space-5) * -1) calc(var(--space-7) * -1) var(--space-5);
    border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    overflow: hidden;
    position: relative;
  }

  .service-image img {
    width: 100%;
    height: 240px;
    object-fit: cover;
    display: block;
    transition: transform var(--transition-base);
  }

  :global(.card--elevated):hover .service-image img {
    transform: scale(1.05);
  }

  :global(.service-badge) {
    position: absolute;
    top: var(--space-5);
    right: var(--space-5);
    z-index: 10;
  }

  :global(.price) {
    margin: var(--space-5) 0;
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-gray-200);
  }

  /* Subscription Section */
  .subscription {
    padding: var(--space-10) 0;
    background-color: var(--color-gray-100);
  }

  .subscription-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-6);
    align-items: center;
  }

  .subscription-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .subscription-image img {
    width: 100%;
    height: 100%;
    min-height: 400px;
    object-fit: cover;
    display: block;
  }

  :global(.subscription-card) {
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-secondary-dark) 100%);
    color: var(--color-white);
  }

  .subscription-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: var(--space-8);
    align-items: center;
  }

  .subscription-content :global(.heading),
  .subscription-content :global(.text) {
    color: var(--color-white);
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: var(--space-5) 0;
  }

  .benefits-list li {
    font-size: var(--font-size-lg);
    margin: var(--space-2) 0;
  }

  .subscription-buttons {
    display: flex;
    gap: var(--space-3);
    flex-wrap: wrap;
  }

  .subscription-pricing {
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border-radius: var(--radius-lg);
    padding: var(--space-5);
    min-width: 200px;
    text-align: center;
  }

  :global(.plan-label) {
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }

  :global(.plan-price) {
    color: var(--color-white) !important;
    margin: 0;
  }

  .plan-period {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-normal);
  }

  /* Why Us Section */
  .why-us {
    padding: var(--space-10) 0;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-7);
  }

  .feature {
    text-align: center;
  }

  .feature-icon {
    font-size: 3rem;
    margin-bottom: var(--space-3);
  }

  /* CTA Section */
  .cta {
    padding: var(--space-10) 0;
    background: linear-gradient(135deg, var(--color-accent) 0%, var(--color-accent-dark) 100%);
    text-align: center;
  }

  .cta :global(.heading) {
    color: var(--color-dark);
    margin-bottom: var(--space-4);
  }

  :global(.cta-subtitle) {
    color: var(--color-dark);
    max-width: 600px;
    margin: 0 auto var(--space-6);
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      min-height: 500px;
      padding: var(--space-8) 0;
    }

    .subscription-wrapper {
      grid-template-columns: 1fr;
    }

    .subscription-image {
      height: 300px;
    }

    .subscription-content {
      grid-template-columns: 1fr;
    }

    .subscription-pricing {
      margin-top: var(--space-5);
    }

    .order-input-group {
      flex-direction: column;
    }

    .hero-buttons,
    .subscription-buttons,
    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .service-image {
      margin: calc(var(--space-5) * -1) calc(var(--space-5) * -1) var(--space-4);
    }
  }
</style>
